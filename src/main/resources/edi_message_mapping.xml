<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./edi_message_mapping.xsl"?>
<edimap xmlns="http://www.milyn.org/schema/edi-message-mapping-1.6.xsd">
    <description name="Purchase Order Document" version="1" />
    <delimiters segment="&#10;" field="*" component="^" sub-component="~" />
    <segments xmltag="PurchaseOrderDocument">
        <segment xmltag="PurchaseOrderHeader" segcode="HDR">
            <documentation>
                Lorem ipsum dolor amit.
            </documentation>
            <field xmltag="Id" dataType="String">
                <documentation>
                    Lorem ipsum dolor amit.
                </documentation>
            </field>
            <field xmltag="StatusCode" dataType="String" />
            <field xmltag="NetAmount" dataType="BigDecimal" />
            <field xmltag="TotalAmount" dataType="BigDecimal" />
            <field xmltag="Tax" dataType="BigDecimal" />
            <field xmltag="Date" dataType="Date" dataTypeParameters="format=EEE MMM dd HH:mm:ss z yyyy;locale=en" />
        </segment>
        <segment xmltag="PurchaseOrderCustomer" segcode="CUS">
            <field xmltag="Username" dataType="String" />
            <field xmltag="Name">
                <component xmltag="First" dataType="String" />
                <component xmltag="Last" dataType="String" />
            </field>
            <field xmltag="State" dataType="String" />
        </segment>
        <segment xmltag="PurchaseOrderItem" segcode="ORD" maxOccurs="-1">
            <field xmltag="Position" dataType="Integer" />
            <field xmltag="Quantity" dataType="Integer" />
            <field xmltag="ProductId" dataType="String" />
            <field xmltag="Title" dataType="String" />
            <field xmltag="Price" dataType="BigDecimal" />
        </segment>
    </segments>
</edimap>