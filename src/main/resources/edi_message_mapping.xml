<?xml version="1.0" encoding="UTF-8"?>
<edimap xmlns="http://www.milyn.org/schema/edi-message-mapping-1.3.xsd">
    <description name="Purchase Order Document" version="1"/>
    <delimiters segment="&#10;" field="*" component="^" sub-component="~"/>
    <segments xmltag="PurchaseOrderDocument">
        <segment xmltag="PurchaseOrderHeader" segcode="HDR">
            <field xmltag="Id"/>
            <field xmltag="StatusCode"/>
            <field xmltag="NetAmount"/>
            <field xmltag="TotalAmount"/>
            <field xmltag="Tax"/>
            <field xmltag="Date"/>
        </segment>
        <segment xmltag="PurchaseOrderCustomer" segcode="CUS">
            <field xmltag="Username"/>
            <field xmltag="Name">
                <component xmltag="First"/>
                <component xmltag="Last"/>
            </field>
            <field xmltag="State"/>
        </segment>
        <segment xmltag="PurchaseOrderItem" segcode="ORD" maxOccurs="-1">
            <field xmltag="Position"/>
            <field xmltag="Quantity"/>
            <field xmltag="ProductId"/>
            <field xmltag="Title"/>
            <field xmltag="Price"/>
        </segment>
    </segments>
</edimap>